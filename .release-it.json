{
  "git": {
    "requireCleanWorkingDir": false,
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "changelog": "pnpx git-cliff --unreleased"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "web": true,
    "draft": true,
    "releaseNotes": "pnpx git-cliff --output CHANGELOG.md --tag ${version}"
  },
  "hooks": {
    "before:init": [],
    "after:bump": "pnpx git-cliff --output CHANGELOG.md --tag ${version}"
  },
  "npm": {
    "publish": true,
    "publishPath": "gen/ts"
  },
  "plugins": {
    "@csmith/release-it-calver-plugin": {
      "format": "yyyy.mm.minor",
      "increment": "calendar",
      "fallbackIncrement": "minor"
    },
    "@release-it/bumper": {
      "out": [
        {
          "file": "VERSION",
          "type": "text/plain"
        },
        {
          "file": "gen/ts/package.json",
          "path": "version"
        }
      ]
    }
  }
}