{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "web": true,
    "draft": true
  },
  "hooks": {
    "before:init": []
  },
  "npm": {
    "publish": true,
    "publishPath": "gen/ts"
  },
  "plugins": {
    "release-it-pnpm": {},
    "./internal/release/calver-plugin.js": {
      "format": "yyyy.mm.minor",
      "increment": "calendar",
      "fallbackIncrement": "minor"
    },
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "ignoreRecommendedBump": true
    },
    "@release-it/bumper": {
      "out": [
        {
          "file": "VERSION",
          "type": "text/plain"
        },
        {
          "file": "gen/ts/package.json",
          "path": "version"
        }
      ]
    }
  }
}