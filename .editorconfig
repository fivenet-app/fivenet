# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 4
insert_final_newline = false

[*.{proto,sql}]
indent_size = 2
indent_style = space
insert_final_newline = true
