{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Frontend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["frontend"],
            "buildFlags": "-race -a -installsuffix cgo",
            "env": {
                "CGO_ENABLED": "1",
                "FIVENET_CONFIG_FILE": "./config.yaml"
            },
            "dlvFlags": ["--check-go-version=false"]
        },
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["server", "--module-cron-agent"],
            "buildFlags": "-race -a -installsuffix cgo",
            "env": {
                "CGO_ENABLED": "1",
                "FIVENET_CONFIG_FILE": "./config.yaml"
            },
            "dlvFlags": ["--check-go-version=false"]
        },
        {
            "name": "Launch Worker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["worker"],
            "buildFlags": "-race -a -installsuffix cgo",
            "env": {
                "CGO_ENABLED": "1",
                "FIVENET_CONFIG_FILE": "./config.worker.yaml"
            },
            "dlvFlags": ["--check-go-version=false"]
        },
        {
            "name": "Launch Discord Bot",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["discord"],
            "buildFlags": "-race -a -installsuffix cgo",
            "env": {
                "CGO_ENABLED": "1",
                "FIVENET_CONFIG_FILE": "./config.worker.yaml"
            },
            "dlvFlags": ["--check-go-version=false"]
        },
        {
            "name": "Launch DBSync",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "args": ["dbsync"],
            "buildFlags": "-race -a -installsuffix cgo",
            "env": {
                "CGO_ENABLED": "1",
                "FIVENET_CONFIG_FILE": "./config.worker.yaml",
                "FIVENET_DBSYNC_FILE": "./dbsync.yaml"
            },
            "dlvFlags": ["--check-go-version=false"]
        },
        {
            "name": "Launch UI",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": ["dev"],
            "outputCapture": "std"
        }
    ],
    "compounds": [
        {
            "name": "ALL",
            "configurations": [
                "Launch UI",
                "Launch Frontend",
                "Launch Server",
                "Launch Worker"
            ],
            "stopAll": false
        }
    ]
}